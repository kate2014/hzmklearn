<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-autowire="byName">
    <context:component-scan base-package="com.mockuai.shopplatform.core.service.action" />
    <context:component-scan base-package="com.mockuai.shopplatform.core.manager" />
    <context:component-scan base-package="com.mockuai.shopplatform.core.dao" />

    <bean id="shopService" class="com.mockuai.shopplatform.core.api.impl.ShopServiceImpl" />
    <bean id="actionHoloder" class="com.mockuai.shopplatform.core.service.action.ActionHolder" />
    <bean id="appContext" class="com.mockuai.shopplatform.core.service.AppContext" />
    <bean id="requestDispatcher" class="com.mockuai.shopplatform.core.service.RequestDispatcher">
        <property name="actionHoloder" ref="actionHoloder" />
        <property name="appContext" ref="appContext" />
    </bean>

    <bean id="appClient" class="com.mockuai.appcenter.client.impl.AppClientImpl" />

</beans>