<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"  
  xsi:schemaLocation="http://www.springframework.org/schema/beans  
    http://www.springframework.org/schema/beans/spring-beans.xsd  
    http://code.alibabatech.com/schema/dubbo  
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">   
    <!-- 具体的实现bean -->
    <bean id="shopService" class="com.mockuai.shopplatform.core.api.impl.ShopServiceImpl"/>

	<dubbo:registry address="zookeeper://${shopplatform.dubbo.registry.address}" />
	
    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${shopplatform.dubbo.provider.port}" />
  
    <!-- 声明需要暴露的服务接口 -->
   <dubbo:service interface="com.mockuai.shopplatform.api.ShopService" ref="shopService" protocol="dubbo"/>

</beans>
